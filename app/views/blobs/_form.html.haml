= form_for @blob do |f|
  -if @blob.errors.any?
    #error_explanation
      %h2= "#{pluralize(@blob.errors.count, "error")} prohibited this blob from being saved:"
      %ul
        - @blob.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
